{
    // for apperaance configuration here
    "window.zoomLevel": 1,
    "workbench.iconTheme": "vscode-great-icons",
    
    // for python and linting and other settings here
    "python.pythonPath": "C:\\Users\\Lonel\\Anaconda3\\python.exe",
    "python.linting.enabled": true,
    
    "python.linting.pep8Enabled": true,
    "python.linting.pep8Args": [
        "--disable=W293"
    ],
    "python.linting.pylintEnabled":false,
    "python.linting.pylintArgs": [
        "--disable-msg=E101"
    ],
    "autoDocstring.docstringFormat": "numpy",

    // file and folder configuration
    "files.autoSave": "afterDelay",
    "workbench.colorTheme": "One Dark Pro",

    // git configuration
    "git.ignoreMissingGitWarning": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "editor.minimap.enabled": false,
    
    
    // the extensions setting here. 
    // ----LATEX----- Setting
    "vsicons.dontShowNewVersionMessage": true,
    "latex-workshop.latex.tools":[
        {
            // 编译工具和命令
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "--shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "--shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        // command options, for the fisrt part is to use xelatex as defualt
        // option and the xe-bob-2*xe as the other option.
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        },
        {
            "name": "xe->bib->xe->xe",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name":"pdflatex",
            "tools":[
                "pdflatex"
            ]
        },
        {
            "name":"pdflate->bib->pdflatex",
            "tools":[
                "pdflatex",
                "bibtex",
                "pdflatex"
            ]

        },
        {
            "name": "xe->bib->xe",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex"
            ]
        },
    ],
    "latex-workshop.view.pdf.viewer": "tab",

    // for spell check
    "spellright.configurationScope": "user",
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "spellright.notificationClass": "information",
}


